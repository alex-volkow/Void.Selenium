<Window x:Class="Void.Selenium.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Void.Selenium.Console"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Selenium Browser Console" Height="600" Width="800"
        Loaded="WindowLoaded"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="frame" NavigationUIVisibility="Hidden" Padding="0"/>
        <Label Grid.Row="1" Content="" FontSize="12" Name="status" Background="DarkGray"/>
    </Grid>
</Window>
