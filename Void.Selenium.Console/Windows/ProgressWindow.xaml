<Window x:Class="Void.Selenium.Console.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Void.Selenium.Console"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ProgressWindow" Height="250" Width="400" BorderThickness="0"
        WindowStyle="None"
        ShowInTaskbar="False"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Background="LightBlue" Content="" Padding="15,5,5,5" FontSize="18" Name="header"/>
        <Label Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="message"
               FontSize="14"/>
    </Grid>
</Window>
